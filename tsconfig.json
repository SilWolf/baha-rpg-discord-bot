{
	"compilerOptions": {
		"baseUrl": "./src",
		"target": "es2015",
		"lib": ["es2015"],
		"module": "commonjs",
		"allowJs": false,
		"sourceMap": false,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"removeComments": true,
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src/**/*"]
}
